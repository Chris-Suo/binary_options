<div class="bg-gray-100 py-8 bg-gradient-to-r from-green-300 to-blue-300">
  <div class="mx-auto max-w-7xl px-6 text-center lg:px-8">
    <div class="mx-auto max-w-2xl">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">遠端機台檢測</h2>
      <p class="mt-4 text-lg leading-8 text-gray-600"></p>
    </div>
    <ul role="list" class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3">

      <% @on_off_machines.each do |machine| %>
        <%= link_to machine_path(slug: machine.slug) do %>
          <li class="bg-white shadow-lg p-4 py-8">
            <%= image_tag machine.image_url, class: "object-cover mx-auto h-60 w-80 shadow-lg", alt: machine.description %>
            <h3 class="mt-6 text-lg font-semibold leading-7 tracking-tight"><%= machine.name %></h3>
          </li>
        <% end %>
      <% end %>

    </ul>
  </div>
</div>
