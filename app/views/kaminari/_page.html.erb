<% if page.current? %>
  <span class="inline-flex items-center border-t-2 border-indigo-500 px-4 pt-4 text-lg font-bold text-orange-600"><%= page %></span>
<% else %>
  <%= link_to page, url, remote: remote, rel: page.rel, class: "inline-flex items-center border-t-2 border-transparent px-4 pt-4 text-lg font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700" %>
<% end %>

