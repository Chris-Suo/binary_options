<div class="mx-auto max-w-7xl p-4 sm:p-6 lg:p-8">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl tracking-wider">員工列表</h1>
    <%= link_to '新增員工', new_user_path, class: "btn text-white border border-transparent bg-indigo-600 tracking-wide" %>
  </div>

  <div class="overflow-auto py-4 align-middle">
    <%= paginate @users %>
    <table class="">
      <thead class="">
      <tr>
        <th class="bg-indigo-600"><span class="whitespace-nowrap">姓名</span></th>
        <th class="bg-indigo-600"><span class="whitespace-nowrap">身份組</span></th>
        <th class="bg-indigo-600"><span class="whitespace-nowrap">元件</span></th>
        <th class="bg-indigo-600"><span class="whitespace-nowrap">狀態</span></th>
        <th class="bg-indigo-600"><span class="whitespace-nowrap">IP</span></th>
      </tr>
      </thead>
      <tbody>

      <% @users.each do |user| %>
        <tr>
          <td class="whitespace-nowrap">
            <%= link_to user.username, user, class: "font-sans font-bold text-indigo-500 underline" %>
          </td>
          <td class="whitespace-nowrap">
            <span class="text-secondary font-serif font-bold"><%= user_level(user) %></span>
          </td>
          <td class="whitespace-nowrap">
            <span class="text-secondary font-sans"><%= user.quota %></span>
          </td>
          <td class="whitespace-nowrap">
            <span class="text-secondary font-serif font-bold <%= user_status_color(user) %>"><%= user_status(user) %></span>
          </td>
          <td class="whitespace-nowrap">
            <span class="text-secondary font-sans"><%= user.current_sign_in_ip %> (<%= ip_to_city(user.current_sign_in_ip) %>)</span>
          </td>
        </tr>
      <% end %>

      </tbody>
    </table>
  </div>

</div>




