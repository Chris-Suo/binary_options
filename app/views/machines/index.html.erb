<div class="bg-gray-100 py-8 bg-gradient-to-r from-green-300 to-blue-300">
  <div class="mx-auto max-w-7xl px-6 text-center lg:px-8">
    <div class="mx-auto max-w-2xl">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">遠端機台答案</h2>
      <p class="mt-4 text-lg leading-8 text-gray-600"></p>
    </div>
    <ul role="list" class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-4 gap-y-8 sm:gap-x-8 sm:gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3">

      <% @all_machines.each do |machine| %>
        <%= link_to show_exams_path(slug: machine.slug) do %>
          <li class="bg-gray-200 shadow-lg py-4 p-4 sm:py-8">
            <h3 class="my-3 text-xl font-semibold leading-7 tracking-tight"><%= machine.name %>
              <span class="<%= machine.on_off ? "" : "text-red-500" %>">
                (<%= machine.on_off ? "開啟" : "關閉" %>)
              </span>
            </h3>
          </li>
        <% end %>
      <% end %>

    </ul>
  </div>
</div>
