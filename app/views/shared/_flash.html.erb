<% unless flash.empty? %>
  <% flash.each do |type, msg| %>
    <% next unless msg.is_a?(String) %>
    <div data-controller="notification"
         class="z-10 fixed inset-0 flex items-end justify-center px-4 py-6 pointer-events-none sm:p-6 sm:items-start sm:justify-end transition transform duration-1000"
         data-notification-delay-value="5000"
         data-transition-enter-from="opacity-0 translate-x-6"
         data-transition-enter-to="opacity-100 translate-x-0"
         data-transition-leave-from="opacity-100 translate-x-0"
         data-transition-leave-to="opacity-0 translate-x-6">
      <div class="z-10 max-w-sm w-full shadow-lg pointer-events-auto ring-1 ring-gray-500 ring-opacity-5 overflow-hidden">
        <div class="p-4 bg-white">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <% if type == "alert" %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 text-rose-500">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              <% else %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-indigo-500">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M14.563 9.75a12.014 12.014 0 00-3.427 5.136L9 12.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              <% end %>
            </div>
            <div class="ml-3 w-0 flex-1 pt-0.5">
              <p class="text-sm">
                系統訊息
              </p>
              <p class="mt-1 text-sm font-bold text-anthracite">
                <%= msg.html_safe %>
              </p>
            </div>
            <div class="ml-4 flex-shrink-0 flex">
              <button data-action="notification#hide" class="bg-white inline-flex focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 shadow-none">
                <span class="sr-only">Close</span>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 text-very-peri">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m-15 0l15 15"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
